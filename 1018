#include<stdio.h>

int main()
{
    int valor,notas;
    scanf("%d",&valor);
    if(valor>0 && valor<1000000){
    
    printf("%d\n",valor);

    if(valor>=100) {

        notas = valor / 100;

        printf("%d nota(s) de R$ 100,00\n",notas);

    }
    else {
        printf("0 nota(s) de R$ 100,00\n");
    }
    valor=valor % 100;

    if(valor >= 50 && valor < 100) {

        notas = valor / 50;
        printf("%d nota(s) de R$ 50,00\n",notas);

    }
    else {
        printf("0 nota(s) de R$ 50,00\n");
    }

    valor = valor % 50;

    if(valor >= 20 && valor <50) {

        notas = valor / 20;
        printf("%d nota(s) de R$ 20,00\n",notas);


    }
    else {
        printf("0 nota(s) de R$ 20,00\n");
    }

    valor = valor % 20;

    if(valor >= 10 && valor < 20) {
        notas = valor / 10;
        printf("%d nota(s) de R$ 10,00\n",notas);

    }
    else {
        printf("0 nota(s) de R$ 10,00\n");
    }

    valor = valor % 10;
    if(valor >= 5 && valor < 10) {
        notas = valor / 5;
        printf("%d nota(s) de R$ 5,00\n",notas);
    }
    else {
        printf("0 nota(s) de R$ 5,00\n");
    }

    valor = valor % 5;
    if(valor >= 2 && valor <5) {
        notas = valor / 2;
        printf("%d nota(s) de R$ 2,00\n",notas);
    }
    else {
        printf("0 nota(s) de R$ 2,00\n");
    }
    valor = valor % 2;
    if(valor >= 1 && valor < 2) {
        notas = valor / 1;
        printf("%d nota(s) de R$ 1,00\n",notas);
    }
    else {
        printf("0 nota(s) de R$ 1,00\n");
    }
    }
    return 0;

}
